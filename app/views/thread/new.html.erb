<!DOCTYPE html>
<html>
	<%# Generate title. %>
	<% provide(:title, 'New Thread') %>

	<body>
		<div class="content-outer">
			<div class="content-inner" border="1px">
				<h3>New Thread!</h3>			
				<div class="messagebody">
					<%= form_tag('/thread/submit', method: 'post') do %>
							<div class="description">Title: </div>
							<%= text_field_tag(:title, "", :size=>75, placeholder: "", class: "text-field", maxlength: 200) %>
								<br><br>
								
							<%-#need to check that unit code is ABCD1234 -%>
							
							<div class="description">Unit Code (optional): </div>
							<%= text_field_tag(:unitcode, "", :size=>20, class: "text-field", maxlength: 8) %>						
								<br><br>
							<hr>
								<br>
							<textarea 
							<%= text_area_tag(:body, "", :cols => 100, :rows => 50, placeholder: "", class: "main-text-field", maxlength: 500) %>
								<br><br>
						<%= submit_tag("Create", class: "button") %>
						<%= submit_tag("Save", class: "button") %>
						<% end %>
						<br>
				</div>
			</div>
		</div>
	</body>
</html>
