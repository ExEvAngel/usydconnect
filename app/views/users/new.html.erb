<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag('/new', method: 'post') do %>

    <%= label_tag :username %>
    <%= text_field_tag :username %>

    <%= label_tag :email %>
    <%= text_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag "Sign up", class: "btn btn-primary" %>
	<% end %>
  </div>
</div>